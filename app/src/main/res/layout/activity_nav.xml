<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="htw_berlin.de.htwplus.NavActivity"
    android:id="@+id/htwplus">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Posts"
        android:id="@+id/PostBtn"
        android:layout_alignParentTop="true"
        android:layout_marginTop="77dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Friends"
        android:id="@+id/FriendsBtn"
        android:layout_below="@+id/PostBtn"
        android:layout_alignParentStart="true"
        android:layout_marginTop="47dp"
        android:layout_alignEnd="@+id/PostBtn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Groups"
        android:id="@+id/GroupsBtn"
        android:layout_below="@+id/FriendsBtn"
        android:layout_alignParentStart="true"
        android:layout_marginTop="54dp"
        android:layout_alignEnd="@+id/FriendsBtn" />

</RelativeLayout>
