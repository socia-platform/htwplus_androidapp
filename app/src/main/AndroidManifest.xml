<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="htw_berlin.de.htwplus.androidapp" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:name=".Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".view.MainActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.UserListViewActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_user_list_view" >
        </activity>
        <activity
            android:name=".view.ShowUserActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_show_user" >
        </activity>
        <activity
            android:name=".view.PostListViewActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_post_list_view" >
        </activity>
        <activity
            android:name=".view.ShowPostActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_show_post" >
        </activity>
    </application>

</manifest>
