<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="htw_berlin.de.htwplus" >

    <uses-permission android:name="android.permission.INTERNET" />
    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:name=".ApplicationController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".view.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.UserListViewActivity"
            android:label="@string/title_activity_user_list_view" >
        </activity>
        <activity
            android:name=".view.ShowUserActivity"
            android:label="@string/title_activity_show_user" >
        </activity>
        <activity
            android:name=".view.PostListViewActivity"
            android:label="@string/title_activity_post_list_view" >
        </activity>
        <activity
            android:name=".view.ShowPostActivity"
            android:label="@string/title_activity_show_post" >
        </activity>
    </application>

</manifest>
